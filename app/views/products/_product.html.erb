<div class="item pr">

  <div class="popup item">
    <div class="item_container">
      <div class="product">
	<% if product.images.present? %>
	  <% product.images.each do |product_image| %>
	    <%= image_tag product_image.image.url(:slider) %>
	  <% end %>
	<% else %>
	  <%= image_tag product.logo.url(:slider) %>
	<% end %>
      </div>

      <a href="javascript:void(0)" class="arrow left"></a>
      <a href="javascript:void(0)" class="arrow right"></a>

      <div class="info">
	<h2 class="product_title"><%= product.title %></h2>
	<p>Размер: <span><%= product.size_range %></span></p>
	<h2><span><%= product.price.to_i %> </span>руб.</h2>

	<div class="cart">
	  <%= link_to 'В корзину', '', class: 'add_to_cart' %>
	  <%= number_field_tag :count, 0, :class => 'count_field', 'data-product-id' => product.id, :min => 0, id: dom_id(product) + '1' %>
	</div>

      </div>
    </div>
  </div>


  <div class="item_container pr">
    <div class="product pr">
      <%= image_tag product.logo.url(:medium) %>
    </div>

    <% if product.label.present? -%>
      <div class="label pr <%= product.label.title.downcase %>"><%= product.label.title %></div>
    <% end -%>

    <div class="info pr">
      <h2 class="product_title"><%= product.title %></h2>
      <p>Размер: <span><%= product.size_range %></span></p>
      <h2><span><%= product.price.to_i %></span> руб.</h2>

      <div class="cart pr">
	<%= link_to 'В корзину', '', class: 'add_to_cart' %>
	<%= number_field_tag :count, 0, :class => 'count_field', 'data-product-id' => product.id, :min => 0, id: dom_id(product) + '2' %>
      </div>

    </div>
  </div>
</div>
