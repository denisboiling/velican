<!DOCTYPE html>
<html>
  <head>
    <title>БелВеликан</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'shared/header' %>
    <%= render 'shared/head' %>

    <%= render('shared/cart') if @active_page != 'cart' -%>
    <%= render('shared/slider') if @active_page != 'cart' -%>

    <%= render('shared/catalog_menu') if @active_page == 'products' -%>

    <div id="main" class="mainwidth">
      <%= yield %>
    </div>

    <div class="cl"></div>

    <%= render 'shared/footer' %>

  </body>
</html>
