<h2>Подача заявки на регистрацию</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), validate: true) do |f| %>
  <%= devise_error_messages! %>

  <div><br />
    <%= f.email_field :email, placeholder: 'Введите email' %></div>

  <div><br />
    <%= f.password_field :password, placeholder: 'Введите пароль' %></div>

  <div><br />
    <%= f.password_field :password_confirmation, placeholder: 'Подтвердите пароль' %></div>

  <div><br />
    <%= f.text_field :name, placeholder: 'Введите ФИО' %></div>

    <div><%= f.submit "Подать заявку", class: 'ent' %></div>
<% end %>
