<h2>Вход как пользователь</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><br />
    <%= f.email_field :email, placeholder: 'Введите email' %></div>

  <div><br />
    <%= f.password_field :password, placeholder: 'Введите пароль' %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Войти", class: 'ent' %></div>
<% end %>
