<div id="head">
  <div class="center">
    
    <% Label.all.each do |label| -%>
      <%= link_to(label.title, products_path(label: label.title), class: "filters #{label.title} #{active_label(label)}") if label.products.present? -%>
    <% end %>
    <div class="search">
      <%= form_tag products_path do %>
	<%= text_field_tag :q, params[:q] %>
	<%= submit_tag 'Поиск', class:'s'  %>
      <% end %>
    </div>
  </div>
</div>
